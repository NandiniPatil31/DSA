///////////// Solution1 ////////////////

class Solution {
    public boolean isPalindrome(String s) {
        if(s.isEmpty())
            return true;

        s = s.replaceAll("[^a-zA-Z0-9]", "");
        s = s.toLowerCase();

        int start = 0;
        int end = s.length()-1;


        while(start < end){
            if(s.charAt(start) == s.charAt(end)){
                start++; end--;
            }
            else
                return false;
        }
        return true;
    }
}
